---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div class="min-h-screen text-white relative">
		<!-- Fond avec dégradés radiaux multiples -->
		<div class="fixed inset-0 -z-20 bg-black">
			<div
				class="absolute inset-0"
				style="
                background: 
                    radial-gradient(circle at 20% 20%, rgba(162, 217, 228, 0.4) 0%, transparent 40%),
                    radial-gradient(circle at 80% 30%, rgba(106, 130, 230, 0.5) 0%, transparent 40%),
                    radial-gradient(circle at 50% 60%, rgba(238, 132, 198, 0.3) 0%, transparent 35%),
                    radial-gradient(circle at 30% 80%, rgba(106, 130, 230, 0.4) 0%, transparent 40%),
                    radial-gradient(circle at 70% 85%, rgba(162, 217, 228, 0.3) 0%, transparent 35%);
            "
			>
			</div>
		</div>

		<!-- Overlay sombre avec blur -->
		<div
			class="fixed inset-0 -z-10 backdrop-blur"
			style="background-color: rgba(46, 46, 46, 0.70);"
		>
		</div>

		<!-- Hero Section -->
		<section
			class="container mx-auto px-8 py-20 flex justify-between items-center"
		>
			<div class="max-w-xl">
				<p class="">Je</p>
				<h1 class="h1">
					Juline<br />
					ADAM
				</h1>
				<p class="text-lg mb-8">
					Créatrice d'expériences visuelles, je suis <span
						id="rotating-text"
						class="font-semibold"></span>
				</p>
				<div class="flex gap-4">
					<button
						class="bg-white/20 backdrop-blur hover:bg-white/30 px-6 py-3 rounded-lg transition"
					>
						Mes projets
					</button>
					<button
						class="bg-white/20 backdrop-blur hover:bg-white/30 px-6 py-3 rounded-lg transition"
					>
						Me contacter
					</button>
				</div>
			</div>

			<!-- Avatar -->
			<div class="relative">
				<img
					src="/images/avatar.svg"
					alt="Avatar Juline ADAM"
					class=""
				/>
			</div>
		</section>

		<!-- Skills Marquee -->
		<div class="bg-black/30 backdrop-blur py-4 overflow-hidden">
			<div class="flex gap-8 animate-marquee whitespace-nowrap">
				<span class="flex items-center gap-2">Veille ✦</span>
				<span class="flex items-center gap-2">Prototypage ✦</span>
				<span class="flex items-center gap-2">Tests Utilisateurs ✦</span
				>
				<span class="flex items-center gap-2">Charte graphique ✦</span>
				<span class="flex items-center gap-2">Design Graphique ✦</span>
				<span class="flex items-center gap-2">Montage vidéo ✦</span>
				<span class="flex items-center gap-2">Maquette (UX/UI) ✦</span>
				<span class="flex items-center gap-2">Communication ✦</span>
				<span class="flex items-center gap-2"
					>Gestion de contenus ✦</span
				>
				<span class="flex items-center gap-2">Identité visuelle ✦</span>
				<span class="flex items-center gap-2">Captation vidéo✦</span>
				<span class="flex items-center gap-2">Branding ✦</span>
			</div>
		</div>

		<!-- Projects Section -->
		<section id="projets" class="container mx-auto px-8 py-20">
			<h2 class="h2 mb-12 underline underline-offset-8">Projets</h2>

			<!-- BDE MMI Project - Titre/Image à GAUCHE, Texte à DROITE -->
			<div
				class="bg-white/10 backdrop-blur rounded-3xl p-8 mb-8 flex justify-between items-center"
			>
				<div>
					<h3 class="h3 mb-4">BDE MMI</h3>
					<img
						src="/src/assets/img/card1.webp"
						alt="BDE MMI"
						class="w-auto h-50 rounded-2xl object-cover mb-6"
					/>
				</div>
				<div class="max-w-md">
					<p class="mb-6">
						BDE (Bureau des étudiants), association étudiante qui
						organise la vie étudiante d'une école ou université en
						proposant des événements, activités et services pour
						créer du lien entre les étudiants.
					</p>
					<div class="flex flex-wrap gap-3 mb-4">
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>DESIGN</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>RÉDACTION</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>ÉVÉNEMENTIEL</span
						>
					</div>
					<button
						class="text-black bg-indigo-300 hover:bg-indigo-400 px-6 py-2 rounded-full transition"
					>
						EN SAVOIR PLUS
					</button>
				</div>
			</div>

			<!-- 2BeBetter Project - Texte à GAUCHE, Titre/Images à DROITE -->
			<div
				class="bg-white/10 backdrop-blur rounded-3xl p-8 mb-8 flex justify-between items-center"
			>
				<div class="max-w-md">
					<p class="mb-6">
						2BeBetter, une plateforme d'entraide solidaire et
						sécurisée pour les personnes victimes de harcèlement
						sous toutes ses formes.
					</p>
					<div class="flex flex-wrap gap-3 mb-4">
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>DESIGN</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>COMMUNICATION</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>UX</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>UI</span
						>
					</div>
					<button
						class="text-black bg-indigo-300 hover:bg-indigo-400 px-6 py-2 rounded-full transition"
					>
						EN SAVOIR PLUS
					</button>
				</div>
				<div class="flex flex-col items-end">
					<h3 class="h3 mb-4">2BeBetter</h3>
					<div class="flex gap-4">
						<img
							src="/src/assets/img/card2.webp"
							alt="2BeBetter"
							class="w-auto h-50 rounded-3xl object-cover"
						/>
					</div>
				</div>
			</div>

			<!-- Festival L'Âge de Bière - Titre/Image à GAUCHE, Texte à DROITE -->
			<div
				class="bg-white/10 backdrop-blur rounded-3xl p-8 mb-8 flex justify-between items-center"
			>
				<div>
					<h3 class="h3 mb-4">Festival L'Âge de Bière</h3>
					<img
						src="/src/assets/img/card3.webp"
						alt="Festival"
						class="w-auto h-50 rounded-2xl object-cover mb-4"
					/>
				</div>
				<div class="max-w-md">
					<p class="mb-6">
						Festival de l'Âge de Bière : événement festif à
						Lachapelle-sous-Chaux qui associe concerts rock et
						dégustations de bières artisanales, dans une ambiance
						rock et musicale.
					</p>
					<div class="flex flex-wrap gap-3 mb-4">
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>VIDÉO</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>MONTAGE</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>CAPTATION</span
						>
					</div>
					<button
						class="text-black bg-indigo-300 hover:bg-indigo-400 px-6 py-2 rounded-full transition"
					>
						EN SAVOIR PLUS
					</button>
				</div>
			</div>

			<!-- MODULO Project - Texte à GAUCHE, Titre/Image à DROITE -->
			<div
				class="bg-white/10 backdrop-blur rounded-3xl p-8 flex justify-between items-center"
			>
				<div class="max-w-md">
					<p class="mb-6">
						2BeBetter, une plateforme d'entraide solidaire et
						sécurisée pour les personnes victimes de harcèlement
						sous toutes ses formes.
					</p>
					<div class="flex flex-wrap gap-3 mb-4">
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>DESIGN</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>ANALYSE</span
						>
						<span
							class="border-3 border-indigo-300 rounded-full px-4 py-1 text-sm"
							>BRANDING</span
						>
					</div>
					<button
						class="text-black bg-indigo-300 hover:bg-indigo-400 px-6 py-2 rounded-full transition"
					>
						EN SAVOIR PLUS
					</button>
				</div>
				<div class="flex flex-col items-end">
					<h3 class="h3 mb-4">MODULO</h3>
					<img
						src="/src/assets/img/card4.webp"
						alt="Modulo"
						class="w-auto h-50 rounded-2xl object-cover"
					/>
				</div>
			</div>
		</section>

		<script>
			const words = [
				"designeuse graphique",
				"créative",
				"passionnée",
				"innovante",
			];
			let currentIndex = 0;
			const textElement = document.getElementById("rotating-text");

			function changeWord() {
				if (textElement) {
					textElement.style.opacity = "0";

					setTimeout(() => {
						currentIndex = (currentIndex + 1) % words.length;
						textElement.textContent = words[currentIndex];
						textElement.style.opacity = "1";
					}, 300);
				}
			}

			// Démarrer avec le premier mot
			if (textElement) {
				textElement.textContent = words[0];
				textElement.style.transition = "opacity 0.3s ease";
			}

			// Changer de mot toutes les 2 secondes
			setInterval(changeWord, 2000);
		</script>

		<style>
			@keyframes marquee {
				0% {
					transform: translateX(0);
				}
				100% {
					transform: translateX(-50%);
				}
			}

			.animate-marquee {
				animation: marquee 20s linear infinite;
			}
		</style>
	</div>
</Layout>
