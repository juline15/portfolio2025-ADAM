---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="min-h-screen text-white relative px-4 md:px-10 lg:px-20">
        <!-- Fond noir pur avec dégradés radiaux -->
        <div class="fixed inset-0 -z-20 bg-black">
            <div
                class="absolute inset-0"
                style="
                background: 
                    radial-gradient(circle at 15% 15%, rgba(162, 217, 228, 0.35) 0%, transparent 50%),
                    radial-gradient(circle at 85% 25%, rgba(106, 130, 230, 0.4) 0%, transparent 50%),
                    radial-gradient(circle at 50% 50%, rgba(238, 132, 198, 0.3) 0%, transparent 45%),
                    radial-gradient(circle at 25% 75%, rgba(106, 130, 230, 0.35) 0%, transparent 50%),
                    radial-gradient(circle at 75% 80%, rgba(162, 217, 228, 0.3) 0%, transparent 45%);
            "
            >
            </div>
        </div>

        <!-- Overlay sombre avec blur -->
        <div
            class="fixed inset-0 -z-10 backdrop-blur-md"
            style="background-color: rgba(0, 0, 0, 0.55);"
        >
        </div>

        <!-- Hero Section -->
        <section
            class="container mx-auto px-4 md:px-8 pt-32 md:pt-40 pb-10 md:pb-20 flex flex-col items-center"
        >
            <h1
                class="h1 underline mb-6 md:mb-8 text-4xl md:text-5xl lg:text-6xl text-center"
            >
                Contact
            </h1>

            <!-- Introduction -->
            <div class="mb-12 md:mb-16 max-w-3xl text-center">
                <p class="text-base md:text-lg mb-4">
                    Vous avez un projet en tête ou une question ? N'hésitez pas
                    à me contacter !
                </p>
                <p class="text-sm md:text-base text-white/80">
                    Je serai ravie d'échanger avec vous et de donner vie à vos
                    idées créatives.
                </p>
            </div>

            <!-- Formulaire de contact -->
            <div class="max-w-3xl w-full">
                <div
                    class="bg-white/10 backdrop-blur rounded-3xl p-6 md:p-8 border border-white/20 mb-12 md:mb-16"
                >
                    <form id="contactForm" class="space-y-6">
                        <!-- Nom -->
                        <div>
                            <label
                                for="name"
                                class="block text-sm md:text-base font-medium mb-2"
                            >
                                Nom <span class="text-pink-300">*</span>
                            </label>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                required
                                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl focus:outline-none focus:border-pink-300 transition text-white placeholder-white/40"
                                placeholder="Votre nom"
                            />
                        </div>

                        <!-- Email -->
                        <div>
                            <label
                                for="email"
                                class="block text-sm md:text-base font-medium mb-2"
                            >
                                Email <span class="text-pink-300">*</span>
                            </label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                required
                                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl focus:outline-none focus:border-pink-300 transition text-white placeholder-white/40"
                                placeholder="votre.email@exemple.com"
                            />
                        </div>

                        <!-- Sujet -->
                        <div>
                            <label
                                for="subject"
                                class="block text-sm md:text-base font-medium mb-2"
                            >
                                Sujet <span class="text-pink-300">*</span>
                            </label>
                            <input
                                type="text"
                                id="subject"
                                name="subject"
                                required
                                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl focus:outline-none focus:border-pink-300 transition text-white placeholder-white/40"
                                placeholder="Objet de votre message"
                            />
                        </div>

                        <!-- Message -->
                        <div>
                            <label
                                for="message"
                                class="block text-sm md:text-base font-medium mb-2"
                            >
                                Message <span class="text-pink-300">*</span>
                            </label>
                            <textarea
                                id="message"
                                name="message"
                                required
                                rows="6"
                                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-xl focus:outline-none focus:border-pink-300 transition text-white placeholder-white/40 resize-none"
                                placeholder="Votre message..."></textarea>
                        </div>

                        <!-- Message de confirmation -->
                        <div id="formMessage" class="hidden p-4 rounded-xl">
                        </div>

                        <!-- Bouton submit -->
                        <div class="flex justify-center">
                            <button
                                type="submit"
                                class="bg-indigo-300 hover:bg-indigo-400 text-black px-8 py-3 rounded-full transition font-medium"
                            >
                                Envoyer le message
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Section Réseaux Sociaux -->
                <div class="mb-12 md:mb-16">
                    <h2
                        class="h2 mb-6 md:mb-8 text-2xl md:text-3xl lg:text-4xl text-center"
                    >
                        Suivez-moi
                    </h2>

                    <div class="flex flex-wrap justify-center gap-6 md:gap-8">
                        <!-- LinkedIn -->
                        <a
                            href="https://www.linkedin.com/in/juline-adam-b6b3112a0/"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="bg-white/10 backdrop-blur hover:bg-white/20 rounded-2xl p-6 border border-white/20 transition flex items-center justify-center w-20 h-20 md:w-24 md:h-24"
                            aria-label="LinkedIn"
                        >
                            <!-- Placeholder pour ton SVG LinkedIn -->
                            <div
                                class="w-15 h-15 md:w-16 md:h-16 flex items-center justify-center"
                            >
                                <img
                                    src="/src/assets/svg/linkedin.svg"
                                    alt="icone linkedin"
                                />
                            </div>
                        </a>

                        <!-- Instagram -->
                        <a
                            href="https://www.instagram.com/juline_crea/"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="bg-white/10 backdrop-blur hover:bg-white/20 rounded-2xl p-6 border border-white/20 transition flex items-center justify-center w-20 h-20 md:w-24 md:h-24"
                            aria-label="Instagram"
                        >
                            <!-- Placeholder pour ton SVG Instagram -->
                            <div
                                class="w-15 h-15 md:w-16 md:h-16 flex items-center justify-center"
                            >
                                <img
                                    src="/src/assets/svg/insta.svg"
                                    alt="icone instagram"
                                />
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Email direct -->
                <div class="text-center mb-12 md:mb-16">
                    <p class="text-sm md:text-base text-white/80 mb-2">
                        Ou écrivez-moi directement à :
                    </p>
                    <a
                        href="mailto:adam.juline@gmail.com"
                        class="text-pink-300 hover:text-pink-400 transition text-base md:text-lg font-medium"
                    >
                        adam.juline@gmail.com
                    </a>
                </div>
            </div>
        </section>
    </div>

    <script>
        const form = document.getElementById("contactForm");
        const formMessage = document.getElementById("formMessage");

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();

            // Récupération des données du formulaire
            const formData = new FormData(form);
            const data = {
                name: formData.get("name"),
                email: formData.get("email"),
                subject: formData.get("subject"),
                message: formData.get("message"),
            };

            try {
                // Simulation d'envoi (à remplacer par ton endpoint)
                // const response = await fetch('/api/contact', {
                //     method: 'POST',
                //     headers: { 'Content-Type': 'application/json' },
                //     body: JSON.stringify(data)
                // });

                // Simulation de succès
                await new Promise((resolve) => setTimeout(resolve, 500));

                // Message de succès
                if (formMessage) {
                    formMessage.textContent =
                        "✓ Message envoyé avec succès ! Je vous répondrai rapidement.";
                    formMessage.className =
                        "p-4 rounded-xl bg-green-500/20 text-green-300 border border-green-500/30";
                    formMessage.classList.remove("hidden");
                }

                // Reset du formulaire
                form.reset();

                // Cache le message après 5 secondes
                setTimeout(() => {
                    formMessage?.classList.add("hidden");
                }, 5000);
            } catch (error) {
                // Message d'erreur
                if (formMessage) {
                    formMessage.textContent =
                        "✗ Une erreur est survenue. Veuillez réessayer.";
                    formMessage.className =
                        "p-4 rounded-xl bg-red-500/20 text-red-300 border border-red-500/30";
                    formMessage.classList.remove("hidden");
                }
            }
        });
    </script>
</Layout>
