    <script>
        // Détection mobile/desktop
        const isMobile = window.innerWidth < 1024;

        // Carousel 1
        let currentSlide1 = 0;
        const track1 = document.getElementById("carousel-track1");
        const prevBtn1 = document.getElementById("prevBtn1");
        const nextBtn1 = document.getElementById("nextBtn1");
        const dots1 = document.querySelectorAll(".carousel-dot1");
        const totalSlides1 = isMobile ? 8 : 3;

        function updateCarousel1() {
            track1.style.transform = `translateX(-${currentSlide1 * 100}%)`;

            dots1.forEach((dot, index) => {
                const dotIndex = parseInt(dot.dataset.index);
                if (dotIndex === currentSlide1) {
                    dot.classList.remove("bg-white/30");
                    dot.classList.add("bg-pink-300");
                } else {
                    dot.classList.remove("bg-pink-300");
                    dot.classList.add("bg-white/30");
                }
            });
        }

        prevBtn1.addEventListener("click", () => {
            currentSlide1 = (currentSlide1 - 1 + totalSlides1) % totalSlides1;
            updateCarousel1();
        });

        nextBtn1.addEventListener("click", () => {
            currentSlide1 = (currentSlide1 + 1) % totalSlides1;
            updateCarousel1();
        });

        dots1.forEach((dot) => {
            dot.addEventListener("click", () => {
                currentSlide1 = parseInt(dot.dataset.index);
                if (currentSlide1 >= 8) currentSlide1 -= 8;
                updateCarousel1();
            });
        });

